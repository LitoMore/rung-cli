{
  "name": "rung-cli",
  "version": "0.2.8",
  "description": "Command line interface for Rung",
  "main": "./dist/vm.js",
  "bin": {
    "rung": "./dist/cli.js"
  },
  "repository": "https://github.com/nginformatica/rung-cli.git",
  "author": "Marcelo Camargo <marcelocamargo@linuxmail.org>",
  "license": "MIT",
  "scripts": {
    "start": "node ./dist/index.js",
    "compile": "babel ./src -d ./dist --source-maps && cp ./packages.txt ./dist",
    "lint": "xo src/**",
    "fix-lint": "xo src/** --fix",
    "prepublish": "npm run compile"
    "prepublish": "npm run compile",
    "test": "true"
  },
  "dependencies": {
    "bluebird": "3.5.0",
    "colors": "1.1.2",
    "commander": "2.9.0",
    "data.maybe": "1.2.2",
    "handlebars": "^4.0.8",
    "jszip": "^3.1.3",
    "moment": "^2.18.1",
    "ramda": "0.23.0",
    "read": "^1.0.7",
    "rung-sdk": "^1.0.7",
    "superagent": "^3.5.0",
    "superagent-promise": "^1.1.0",
    "tracking-correios": "^1.1.0",
    "validator": "7.0.0",
    "yargs": "^7.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "xo": "^0.17.1"
  },
  "xo": {
    "esnext": true,
    "space": 4,
    "rules": {
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "operator-linebreak": [
        "error",
        "before"
      ],
      "no-restricted-imports": [
        "error",
        "!colors"
      ],
      "import/no-dynamic-require": [
        "off"
      ],
      "new-cap": [
        "off"
      ]
    }
  }
}
